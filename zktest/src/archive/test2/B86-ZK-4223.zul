<zk>
	<zscript><![CDATA[
		ListModelList model = new ListModelList(Collections.nCopies(29, "dummy"));
	]]></zscript>
	<label multiline="true">
		1. The width of grid should be the same as its container (div)
	</label>
	<div width="100%">
		<grid hflex="1">
			<columns>
				<column label="column"/>
			</columns>
			<rows>
				<row>
					<cell>cell</cell>
				</row>
			</rows>
		</grid>
	</div>
	<div width="100%" height="200px">
		<grid model="${model}" vflex="1" hflex="1">
			<columns>
				<column label="col-1"/>
				<column label="col-2"/>
			</columns>
			<template name="model">
				<row>
					<cell>${each}</cell>
					<cell>${each}</cell>
				</row>
			</template>
		</grid>
	</div>
</zk>